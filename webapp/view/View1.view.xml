<mvc:View controllerName="com.ciber.sf.sfpayroll.controller.View1" xmlns:t="sap.ui.table" xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
	xmlns:f="sap.ui.layout.form" xmlns:u="sap.ui.unified" class="sapUiSizeCompact" xmlns:c="sap.ui.core" xmlns:l="sap.ui.layout" xmlns="sap.m"
	width="100%">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="Thiết lập trừ gia cảnh">
					<content>
						<l:Grid defaultSpan="L6 M6 S6" class="sapUiSmallMarginTop sapUiSmallMargin">
							<l:content>
								<l:VerticalLayout>
									<l:content>
										<ScrollContainer height='20rem' vertical='true'>
											<Table id="idProductsTable" inset="false" items="{path:'/EmpEmployment'}" enableBusyIndicator="true">
												<columns>
													<Column demandPopin="true">
														<Text text="Ngày hiệu lực"/>
													</Column>
												</columns>
												<items>
													<ColumnListItem vAlign="Middle" type="Navigation" press="handleMasterPress">
														<cells>
															<!--<Text text="{ProductId}"/>-->
															<!--<Text text="{Name}"/>-->
															<!--<Text text="{Category}"/>-->
															<!--<Text text="{DateOfSale}"/>-->
															<!--<Text text="{Price}"/>-->
															<!--<Text text="{personIdExternal}"/>-->
															<!--<Text text="{userId}"/>-->
															<Text text="{ path: 'endDate', type: 'sap.ui.model.type.Date', formatOptions: { style: 'short' } }"/>
															<!--<Text text="{isContingentWorker}"/>-->
															<!--<Text text="{assignmentIdExternal}"/>-->
														</cells>
													</ColumnListItem>
												</items>
											</Table>
										</ScrollContainer>
									</l:content>
								</l:VerticalLayout>
								<l:VerticalLayout width="90%">
									<l:content>
										<f:SimpleForm maxContainerCols="2" editable="true" layout="ResponsiveLayout" labelSpanL="1" labelSpanM="1" emptySpanL="5" emptySpanM="5"
											columnsL="5" columnsM="5">
											<f:content>
											
												<Label text="Ngày hiệu lực"/>
												<DatePicker id="dateTimeField"
													value="{ path: '/EmpEmployment/endDate', type: 'sap.ui.model.odata.type.DateTime', constraints: { displayFormat: 'Date' } }"/>
												<!--<Input id='tfDateOfSale'></Input>-->
												<Label text="Giá trị"/>
												<Input id='tfValue'></Input>
												<!--<Label text=""/>-->
												<!--<Button text="Default" press="onPress">-->
												<!--	<layoutData>-->
												<!--		<l:GridData span="L2 M2 S2"/>-->
												<!--	</layoutData>-->
												<!--</Button>-->
											</f:content>
										</f:SimpleForm>
										<FlexBox alignItems="Center" justifyContent="Center">
											<items>
												<Button type="Accept" class="sapUiMediumMarginBeginEnd" icon="sap-icon://save" press="onSave" text="Save" width="80%"/>
												<Button type="Default" class="sapUiMediumMarginBeginEnd" icon="sap-icon://create" press="onCreate" text="Create" width="80%"/>
												<Button type="Attention" class="sapUiMediumMarginBeginEnd" icon="sap-icon://delete" press="onDelete" text="Delete" width="80%"/>
											</items>
										</FlexBox>
									</l:content>
								</l:VerticalLayout>
							</l:content>
						</l:Grid>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>